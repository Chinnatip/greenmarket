<div id="vue">
  <p id="notice"><%= notice %></p>
    <div>
      <h1 style="display:inline-block">ผลิตภัณฑ์ทั้งหมด</h1>
      <span style="vertical-align:middle;float:right;"><%= link_to '+ เพิ่มผลิตภัณฑ์ใหม่', new_product_path , class: 'btn btn-outline-info' %></span>
    </div>

    <table class="table">
      <thead>
        <tr>
          <th>รายการ</th>
          <th>ราคา/ชิ้น</th>
          <th>รายละเอียด</th>
          <th>สต็อค</th>
          <th>ผู้ผลิต</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.cost %> บาท</td>
            <td><%= product.desc %></td>
            <td><%= product.stock %></td>
            <td><%= product.supplier %></td>
            <td><%= link_to 'Show', product %></td>
            <td><%= link_to 'Edit', edit_product_path(product) %></td>
            <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>

</div>

<script type="text/javascript">
  var vue = new Vue({
    el: '#vue',
    data: {
      title: 'Green Market'
    }
  });
</script>
